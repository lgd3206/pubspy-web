{
  "manifest_version": 3,
  "name": "PubSpy - AdSense Publisher ID Finder",
  "version": "1.0.0",
  "description": "在网站上找到AdSense Publisher ID，并发现使用相同ID的其他域名",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "PubSpy - AdSense分析",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}